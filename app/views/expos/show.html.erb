
<div class="display-show">
  <%=cl_image_tag(@expo.photo.key, height: 292, width: 368, :quality=>"auto", :fetch_format=>:auto, gravity:"faces" , :crop=>"fill")%>

  <div class="container-show">

    <div class="card-show">
      <h2 class="title"><%= @expo.title %></h1>
      <div class="d-flex justify-content-between">
        <p class="subtitle"><%= @expo.place.address_name  %></p>
        <p class="subtitle arrondissement"><%= @expo.place.address_city  %> <%= @expo.place.address_zipcode.split(//).last(2).join %></p>
      </div>
      <p class="subtitle">Du <%= (l @expo.date_start, format: "%d %B") %> au <%= (l @expo.date_end, format: "%d %B %Y") %></p>
    </div>

    <div class="button-container">
      <div class="action-button">
        <p>Programmer ma visite</p>
        <%# <%= link_to "Programmer ma visite", expo_proposals_path(@proposal) %>
      </div>
    </div>

    <div>
        <% @expo.tags.each do |tag| %>
      <div class="tag-expo-show subtitle"><%= tag %></div>
      <% end %>
    </div>

    <div class="paragraphe">
      <%= @expo.description.html_safe %>
    </div>

    <div>
      <div class="button-container">
        <div class="action-button">
          <p>Ajouter un commentaire</p>
          <%# <%= link_to "Ajouter un commentaire", expo_reviews(@review) %>
        </div>
      </div>

      <div>
        <% @expo.reviews.each do |review| %>
        <div class="d-flex">
          <div class="review_avatar pt-1 pe-3">
            <% if current_user.photo.attached? %>
                <%= cl_image_tag current_user.photo.key, class: "avatar-xl" %>
              <% else %>
                <%= image_tag "avatar_placeholder.png", class: "avatar-xl" %>
              <% end %>
          </div>
          <div class="show_review">
            <span class="review_title-small"><%= review.user.username%></span>
            <div class="d-flex justify-content-between">
              <span class="review_sub-small"><%=review.created_at.strftime("%Y/%^b/%d")%></span>
              <span class="review_sub-small"><%=review.rating %>â˜…</span>
            </div>
            <p class="paragraphe"><%=review.comment %></p>
          </div>
        </div>
        <hr>
        <% end %>

      </div>
    </div>

  </div>
</div>
