<div class="container-show-proposal">

  <!-- proposal-->
  <div class="image_show-proposal">
    <%=cl_image_tag(@expo.photo.key, height: 292, width: 368, :quality=>"auto", :fetch_format=>:auto, gravity:"faces" , :crop=>"fill")%>
  </div>
  <div class="display-show-proposal">
    <div class="card-show">
      <div class="d-flex justify-content-between">
        <h2 class="title color"><%=@proposal.date_proposale.strftime("%d/%^b/%Y")%></h2>
        <div class="">
          <i class="fa-solid fa-user-group color picto-size"></i>
          <span class="title color"><%=@proposal.participants.count%>/<%=@proposal.max_participants%></span>
        </div>
      </div>
      <h2 class="title"><%= @expo.title %></h2>

      <div class="d-flex justify-content-between">
        <p class="subtitle"><%= @expo.place.address_name.upcase  %></p>
        <p class="subtitle arrondissement"><%= @expo.place.address_city  %> <%= @expo.place.address_zipcode.split(//).last(2).join %></p>
      </div>
    </div>

    <!-- liste d'avatars participants-->
    <div>
        <ul>
          <% @proposal.participants.each do |participant|  %>
            <li class="list-inline d-flex">
              <div class="mt-2">
                <%= link_to profile_user_path(participant.user) do%>
                  <% if participant.user.photo.attached? %>
                    <%= cl_image_tag participant.user.photo.key, class: "avatar-large" %>
                  <% else %>
                    <%= image_tag "avatar2_placeholder.png", class: "avatar-large" %>
                  <% end %>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
    </div>

    <!-- bouton-->
    <div class="button-container mt-3">
      <div class="action-button">
          <p class="color" >Je participe</p>
      </div>
    </div>

    <!-- Chatroom-->
    <div class="" data-controller="proposal-subscription" data-proposal-subscription-proposal-id-value="<%= @proposal.id %>" data-proposal-subscription-current-user-id-value="<%= current_user.id %>">
      <h2 class="title mt-4">chatroom</h2>
      <hr class="title m-0 mt-3 mb-4">

      <div class="messages" data-proposal-subscription-target="messages">

        <!-- Message description proposal-->
        <div class="d-flex">
          <div class="pt-1 pe-2">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar" %>
            <% else %>
              <%= image_tag "avatar_placeholder.png", class: "avatar" %>
            <% end %>
          </div>
          <div>
            <small>
              <strong><%= @proposal.user.username%></strong>
            </small>
            <p><%=@proposal.description %></p>
          </div>
        </div>
          <!-- New Messages-->
          <% @proposal.messages.each do |message| %>
            <%= render "shared/message", message: message, user: (message.user == current_user) %>
          <% end %>
        </div>
      <%= render "shared/messages_proposal" %>
    </div>
  </div>
</div>
