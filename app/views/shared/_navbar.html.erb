<div class="container-navbar">
  <div class="navbar">
    <ul class="list-inline">
      <li class="list-inline-item">
        <%= link_to root_path, class: "navbar-icone" do %>
          <i class="fa-solid fa-house" style="font-size: 28px"></i>
        <% end %>
      </li>
      <li class="list-inline-item">
        <%= link_to expos_path(), class: "navbar-icone" do %>
          <i class="fa-solid fa-list-ul" style="font-size: 30px"></i>
        <% end %>
      </li>
      <li class="list-inline-item">
        <%= link_to expos_path(index: "map"), class: "navbar-icone" do %>
          <i class="fa-regular fa-map" style="font-size: 28px"></i>
        <% end %>
      </li>

      <li class="list-inline-item dropup">
          <% if current_user.nil? == false && current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "black_placeholder.jpg", class: "avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>

          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">

            <% if user_signed_in? %>

              <%= link_to "LOG OUT", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
              <%= link_to "PROFILE", profile_path, data: {turbo_method: :delete}, class: "dropdown-item" %>

            <% else %>

              <%= link_to "LOG IN", new_user_session_path, class: "dropdown-item" %>
              <%= link_to "SIGN UP", new_user_registration_path, class: "dropdown-item" %>

            <% end %>
          </div>
      </li>

    </ul>
  </div>
</div>
