
<div class="search-bar-container">
  <div class="search-bar-body">

    <%= simple_form_for :filters, url: expos_path, method: :get do |f| %>

    <div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          <p class="title_modal">CATEGORIES</p>

              <h5 class="modal-title mt-2" id="exampleModalToggleLabel">QUEL TYPE D'EXPO CHERCHES-TU ?</h5>

          <div class="title-margin-left">
            <hr>
          </div>
          <div class="modal-body">
              <%= f.input :categories,
                collection: Expo.tags,
                as: :check_boxes,
                input_html: { class: "tag-selector" },
                item_wrapper_class: 'tag-item',
                include_hidden: false,
                checked: params.dig(:filters, :categories) %>
          </div>
          <div class="modal-footer">



      <div class="button-container next-tag-container" id="next-tag-container">
          <button class="action-button next-tag" id="next-tag" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal" type="button">
            <p>NEXT</p>
          </button>

      </div>




        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        <p class="title_modal mt-2">BUDGET</p>
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalToggleLabel2">SOUHAITES-TU VOIR UNIQUEMENT LES EXPOSITIONS GRATUITES ?</h5>
        </div>
            <div class="title-margin-left">
          <hr>
        </div>
        <div class="modal-body">
          <%= f.input :price_type,
              collection: ["OUI, GRATUITES", "PEU IMPORTE"],
              as: :check_boxes,
              input_html: { class: "tag-selector" },
              item_wrapper_class: 'tag-item',
              include_hidden: false,
              checked: params.dig(:filters, :price_type) %>

        </div>
        <div class="modal-footer">
          <%= f.submit "GO !", class:"action-button next-tag purple" %>
          <%# <button class="btn btn-primary" data-bs-target="#exampleModalToggle" data-bs-toggle="modal">Back to first</button> %>
        </div>
      </div>
    </div>
  </div>
  <% end %>


  <%# <a class="btn btn-primary" data-bs-toggle="modal" href="#exampleModalToggle" role="button">Picto filtre</a> %>


    <form id="search-bar" action="/expos">
        <div id="filter-icone">
          <a data-bs-toggle="modal" href="#exampleModalToggle" role="button"><i class="fa-solid fa-clipboard-list"></i></a>
        </div>
        <div class="submit-input">
          <button type="submit" id="search-icone">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
      </div>
      <div class="input-field">
        <input id="search-input" type="text" class="form-control" placeholder="Recherchez une expo..." name="query">
      </div>
    </form>
  </div>
</div>
