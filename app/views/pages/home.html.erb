<div class="w-100">


<!-- <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  filtre
</button> -->

<%= render "shared/filter_modal" %>

  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <%@best_rated.first(5).each_with_index do |expo, index| %>
        <div class="carousel-item <%= 'active' if index.zero? %>">
          <%= link_to expo_path(expo) do %>
            <%= cl_image_tag(expo.photo.key, height: '292px', quality: 50) %>
          <% end %>
        </div>
      <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <div class="title-margin-left">
    <p class="title">EXPOS À VENIR</p>
    <hr>
  </div>

   <div class="horizontal-scroll d-flex">
      <%@upcoming.each do |expo| %>
        <div class="card-small subtitle "  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(expo.photo.key) %>">
          <p>
            <%= link_to expo.title.upcase, expo_path(expo) %>
          </p>
        </div>
      <% end %>
   </div>

  <div class="title-margin-left">
    <p class="title">SE TERMINENT BIENTÔT</p>
    <hr>
  </div>
    <div class="horizontal-scroll d-flex flex-nowrap">
      <%@endend_soon.each do |expo| %>
        <div class="card-small subtitle" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(expo.photo.key) %>">
          <p>
            <%= link_to expo.title.upcase, expo_path(expo) %>
          </p>
        </div>
      <% end %>
    </div>
    <div class="margin-bottom"></div>
</div>
